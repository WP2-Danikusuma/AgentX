# AgentX本地开发环境配置
# 复制此文件为.env并根据需要修改配置

# ===================
# 运行模式配置
# ===================
# 本地开发模式，使用内置数据库
DEPLOYMENT_MODE=local

# ===================
# 服务端口配置  
# ===================
# 前端服务端口
FRONTEND_PORT=3000
# 后端服务端口
BACKEND_PORT=8080
# PostgreSQL端口
POSTGRES_PORT=5432
# RabbitMQ端口
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ===================
# 数据库配置（内置）
# ===================
# 使用内置PostgreSQL数据库
DB_HOST=postgres
DB_PORT=5432
DB_NAME=agentx
DB_USER=agentx_user
DB_PASSWORD=agentx_pass

# ===================
# 应用配置
# ===================
# 前端API基础URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api

# Spring配置
SPRING_PROFILES_ACTIVE=dev
JPA_DDL_AUTO=update
SHOW_SQL=true

# ===================
# 默认用户配置
# ===================
# 管理员用户
AGENTX_ADMIN_EMAIL=admin@agentx.ai
AGENTX_ADMIN_PASSWORD=admin123
AGENTX_ADMIN_NICKNAME=AgentX管理员

# 测试用户（开发环境启用）
AGENTX_TEST_ENABLED=true
AGENTX_TEST_EMAIL=test@agentx.ai
AGENTX_TEST_PASSWORD=test123

# ===================
# 日志配置
# ===================
LOG_LEVEL_ROOT=info
LOG_LEVEL_APP=debug

# ===================
# 消息队列配置
# ===================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# ===================
# 文件存储配置
# ===================
# 本地文件存储路径
FILE_STORAGE_PATH=/app/storage

# ===================
# 开发工具配置
# ===================
# 开发模式特性
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true